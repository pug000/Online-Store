{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "noImplicitAny": true,
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "baseUrl": "src",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "files": [
    "src/index.tsx"
  ],
  "include": [
    "src",
    "src/**/*.ts",
    ".eslintrc.json",
    "declarations.d.ts"
  ],
}